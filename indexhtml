<body>

<div class="card">
    <h2>บันทึกเวลาทำงาน</h2>
    
    <div class="input-group">
        <label for="employeeName">ชื่อ-นามสกุล</label>
        <input type="text" id="employeeName" placeholder="กรุณากรอกชื่อของคุณ">
    </div>

    <div class="btn-group">
        <button class="btn-in" onclick="logAttendance('เข้างาน')">ลงชื่อเข้างาน</button>
        <button class="btn-out" onclick="logAttendance('ออกงาน')">ลงชื่อออกงาน</button>
    </div>

    <div id="msg"></div>
</div>

<script>
    function logAttendance(status) {
        const nameInput = document.getElementById('employeeName');
        const name = nameInput.value.trim();
        const msgDiv = document.getElementById('msg');

        if (!name) {
            showMessage('กรุณากรอกชื่อก่อนบันทึก', 'var(--danger)');
            return;
        }

        const timestamp = new Date().toLocaleString('th-TH');
        const record = {
            id: Date.now(),
            name: name,
            status: status,
            time: timestamp
        };

        // ดึงข้อมูลเดิมจาก LocalStorage
        let data = JSON.parse(localStorage.getItem('attendance_records') || '[]');
        data.push(record);
        
        // บันทึกกลับลงไป
        localStorage.setItem('attendance_records', JSON.stringify(data));

        showMessage(`บันทึก ${status} สำเร็จ เมื่อ ${timestamp}`, 'var(--success)');
        nameInput.value = ''; // เคลียร์ชื่อหลังบันทึก
    }

    function showMessage(text, color) {
        const msgDiv = document.getElementById('msg');
        msgDiv.textContent = text;
        msgDiv.style.display = 'block';
        msgDiv.style.backgroundColor = color + '22';
        msgDiv.style.color = color;
        msgDiv.style.border = `1px solid ${color}`;
        
        setTimeout(() => {
            msgDiv.style.display = 'none';
        }, 3000);
    }
</script>

